{
  "openapi": "3.0.3",
  "info": {
    "title": "Shelfy API",
    "version": "v1",
    "description": "API documentation for the Shelfy library management system"
  },
  "servers": [
    {
      "url": "{protocol}://{host}",
      "variables": {
        "protocol": {
          "default": "http",
          "enum": [
            "http",
            "https"
          ]
        },
        "host": {
          "default": "localhost:3000"
        }
      }
    }
  ],
  "paths": {
    "/books": {
      "get": {
        "summary": "List books",
        "tags": [
          "Books"
        ],
        "description": "Returns a paginated list of all books with their borrow status",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "Page number (default: 1)",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "required": false,
            "description": "Items per page (default: 20, max: 50)",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "status",
            "in": "query",
            "required": false,
            "enum": [
              "borrowed",
              "available"
            ],
            "description": "Filter by borrow status:\n * `borrowed` \n * `available` \n ",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Books filtered by status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/BookWithStatus"
                      }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "total": {
                          "type": "integer"
                        },
                        "page": {
                          "type": "integer"
                        },
                        "per_page": {
                          "type": "integer"
                        }
                      },
                      "required": [
                        "total",
                        "page",
                        "per_page"
                      ]
                    }
                  },
                  "required": [
                    "data",
                    "meta"
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Register a new book",
        "tags": [
          "Books"
        ],
        "description": "Creates a new book with the given attributes",
        "parameters": [],
        "responses": {
          "201": {
            "description": "Book registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Book"
                    }
                  },
                  "required": [
                    "data"
                  ]
                }
              }
            }
          },
          "422": {
            "description": "Duplicate serial number",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "message"
                      ]
                    },
                    "errors": {
                      "type": "object"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "book": {
                    "type": "object",
                    "properties": {
                      "serial_number": {
                        "type": "string",
                        "example": "100001"
                      },
                      "title": {
                        "type": "string",
                        "example": "The Great Gatsby"
                      },
                      "author": {
                        "type": "string",
                        "example": "F. Scott Fitzgerald"
                      }
                    },
                    "required": [
                      "serial_number",
                      "title",
                      "author"
                    ]
                  }
                },
                "required": [
                  "book"
                ]
              },
              "examples": {
                "valid_book": {
                  "summary": "Valid book registration",
                  "value": {
                    "book": {
                      "serial_number": "100001",
                      "title": "The Great Gatsby",
                      "author": "F. Scott Fitzgerald"
                    }
                  }
                },
                "invalid_book": {
                  "summary": "Invalid book - missing fields",
                  "value": {
                    "book": {
                      "serial_number": "",
                      "title": "",
                      "author": ""
                    }
                  }
                },
                "duplicate_serial_number": {
                  "summary": "Duplicate serial number",
                  "value": {
                    "book": {
                      "serial_number": "100001",
                      "title": "Another Book",
                      "author": "Another Author"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
